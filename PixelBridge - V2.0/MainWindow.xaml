<Window x:Class="PixelBridge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelBridge"
        mc:Ignorable="d"
        WindowStartupLocation="Manual"
        Title="Pixel Bridge - V2.0" ResizeMode="NoResize" WindowStyle="None"
        MinHeight="200" Height="200" Width="400" >
    <Window.Resources>
        <ResourceDictionary>
            <local:BooleanToEnable_SendDataInTextBox_Converter x:Key="BooleanToEnable_SendDataInTextBox_Converter" />
            <local:BooleanToEnable_FixedData_Converter x:Key="BooleanToEnable_FixedData_Converter"/>
            <local:BooleanToVisibility_Button_Converter x:Key="BooleanToVisibility_Button_Converter"/>
            <local:BooleanToEnable_Button_Converter x:Key="BooleanToEnable_Button_Converter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <local:MainContext/>
    </Window.DataContext>
    <!--<Window.InputBindings>
        <KeyBinding Key="Space" Command="{Binding SpaceMainWindowCommand}"/>
    </Window.InputBindings>-->
    <Border BorderBrush="Gray" BorderThickness="1" PreviewKeyDown="OnPreviewKeyDown">
        <Grid Background="#ECF2F2">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="80" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="White" MouseDown="panelHeader_MouseDown">
                <!--MouseDown="panelHeader_MouseDown"-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Source="Resource/PixelBridge.ico"/>
                    <TextBlock 
                            Text="Pixel Bridge - V" 
                            Margin="5,0,0,0" VerticalAlignment="Center" 
                            FontSize="18" FontWeight="Bold" Foreground="#0099CC" />
                    <TextBlock 
                        Text="{Binding version}" 
                        Margin="0,0,0,0" VerticalAlignment="Center" 
                        FontSize="18" FontWeight="Bold" Foreground="#0099CC" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Height="40"
                            FontSize="22" Padding="0,-4,0,0" BorderBrush="White" FontWeight="Thin" Content="⚙️"
                            Margin="0" Command="{Binding SettingCommand}">
                    </Button>
                    <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Height="40"
                            FontSize="28" Padding="0,-4,0,0" BorderBrush="White" FontWeight="Thin" Content="✕"
                            Margin="0" Command="{Binding ExitCommand}">
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" IsEnabled="{Binding Config.SendDataMode, Converter={StaticResource BooleanToEnable_SendDataInTextBox_Converter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Label Padding="0,0,0,0" Height="40" Content="S/N:" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Grid>
                <Grid Grid.Column="1" Margin="5,5,5,5">
                    <TextBox Text="{Binding DataToSendInTextBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Padding="0,0,0,0" Height="40" FontSize="20" 
                            VerticalAlignment="Center" x:Name="tbxBarcode">
                        <!--<TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding EnterTextBoxCommand}"/>
                        </TextBox.InputBindings>-->
                        <!--<TextBox.InputBindings>
                            <KeyBinding Key="Space" Command="{Binding SpaceTextBoxCommand}"/>
                        </TextBox.InputBindings>-->
                    </TextBox>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" >
                <TextBlock
                   Text="{Binding StringError}" x:Name="tbxShowErr" HorizontalAlignment="Center"
                   FontSize="16" Foreground="Red"
                   VerticalAlignment="Center"/>
            </Grid>

            <Grid Grid.Row="3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!--<theme:PackIcon x:Name="iconConnectProgram" Kind="Information" VerticalAlignment="Center" Foreground="Gray" Width="25" Height="25" />-->
                        <TextBlock
                                Margin="10,0,0,0" x:Name="iconConnectProgram" 
                                Width="25" FontSize="18" Text="{Binding ConnectionIcon}" Foreground="{Binding ConnectionColor}"/>
                        <TextBlock 
                                Padding="0,4,0,0" Margin="5,0,0,0" Text="Connect to the sofware" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <Button Height="30" Width="120" Margin="0,0,30,0" Content="RESET"
                        Visibility="{Binding Config.IsUseResetButton, Converter={StaticResource BooleanToVisibility_Button_Converter}}"
                        VerticalAlignment="Center" HorizontalAlignment="Right" Command="{Binding ResetCommand}"/>
                </Grid>

            </Grid>
        </Grid>
    </Border>
</Window>
