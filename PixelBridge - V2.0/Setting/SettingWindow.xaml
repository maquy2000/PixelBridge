<Window x:Class="PixelBridge.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelBridge"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Setting" Height="450" Width="420">
    <Window.DataContext>
        <local:SettingWindowContext/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <local:BooleanToEnable_SendDataInTextBox_Converter x:Key="BooleanToEnable_SendDataInTextBox_Converter" />
            <local:BooleanToEnable_FixedData_Converter x:Key="BooleanToEnable_FixedData_Converter"/>
            <local:BooleanToVisibility_Button_Converter x:Key="BooleanToVisibility_Button_Converter"/>
            <local:BooleanToEnable_Button_Converter x:Key="BooleanToEnable_Button_Converter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Border BorderBrush="Black" BorderThickness="0">
        <Grid Background="#ECF2F2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Margin="15">
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Margin="0,0,0,4" 
                               Text="Server" FontSize="16" FontWeight="Bold" />
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Address and Port" Grid.Column="0" VerticalAlignment="Center" FontSize="14"/>
                        <TextBox Grid.Column="1" Height="24" FontSize="14" Text="{Binding Config.IP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Text=":" />
                        <TextBox Grid.Column="3" Height="24" FontSize="14" Text="{Binding Config.Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </StackPanel>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Margin="0,0,0,4"  
                               Text="Data send to server" FontSize="16" FontWeight="Bold" />
                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!--<TextBlock Text="End of all data send" Grid.Column="0" VerticalAlignment="Center" FontSize="14"/>-->
                    </Grid>
                    <!--Dùng phím Space để gửi dữ liệu ngay lập tức-->
                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Content="Use SPACE to send" IsChecked="{Binding Config.IsUseSpaceButton, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            Grid.Column="0" VerticalAlignment="Center" FontSize="14"/>
                        <TextBox Grid.Column="1" Height="24" FontSize="14" 
                                 IsEnabled="{Binding Config.IsUseSpaceButton, Converter={StaticResource BooleanToEnable_Button_Converter}}"
                                 Text="{Binding Config.SpaceString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    <!--Dùng phím reset để gửi dữ liệu ngay lập tức-->
                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Content="Click RESET to send" IsChecked="{Binding Config.IsUseResetButton, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                  Grid.Column="0" VerticalAlignment="Center" FontSize="14"/>
                        <TextBox Grid.Column="1" Height="24" FontSize="14"
                                 IsEnabled="{Binding Config.IsUseResetButton, Converter={StaticResource BooleanToEnable_Button_Converter}}"
                                 Text="{Binding Config.ResetString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Data type" Grid.Column="0" VerticalAlignment="Center" FontSize="14"/>
                        <ComboBox Grid.Column="1" Height="24" FontSize="14"
                                  ItemsSource="{Binding SendDataModeList}"
                                  SelectedItem="{Binding Config.SendDataMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    <Grid Margin="10,0,10,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" IsEnabled="{Binding Config.SendDataMode, Converter={StaticResource BooleanToEnable_SendDataInTextBox_Converter}}">
                            <TextBlock Margin="0,0,0,4" Text="Send data in text box" FontSize="14"/>
                            <Grid Margin="10,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding Config.IsCompareLengthOfInputData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                          Content="Length of input data" Grid.Column="0" VerticalAlignment="Center" FontSize="14"/>
                                <TextBox Grid.Column="1" Height="24" FontSize="14" PreviewTextInput="TextBox_PreviewTextInput"
                                    Text="{Binding Config.LengthOfInputCompare, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                            <Grid Margin="10,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding Config.IsInputDataContain, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                          Content="Input data contain" Grid.Column="0" VerticalAlignment="Center" FontSize="14"/>
                                <TextBox Grid.Column="1" Height="24" FontSize="14"
                                    Text="{Binding Config.InputDataContainString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Row="1" IsEnabled="{Binding Config.SendDataMode, Converter={StaticResource BooleanToEnable_FixedData_Converter}}">
                            <TextBlock Margin="0,0,0,4" Text="Fixed data to send" FontSize="14"/>
                            <Grid Margin="10,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Data send to server" Grid.Column="0" VerticalAlignment="Center" FontSize="14"/>
                                <TextBox Grid.Column="1" Height="24" FontSize="14"
                                    Text="{Binding Config.FixedString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" >
                <Button Margin="0,0,40,0" Command="{Binding SaveCommand}"
                        Width="100" FontSize="16" FontWeight="Bold" Height="32" Content="Save"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
