<Window x:Class="PixelBridge.SendData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelBridge.SendData"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        WindowStartupLocation="Manual"
        
        Title="Pixel Bridge - Send Data" ResizeMode="NoResize" WindowStyle="None"
        MinHeight="200" Height="200" Width="400" >
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid Background="#ECF2F2"  >
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="80" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="White" x:Name="panelHeader" MouseDown="panelHeader_MouseDown" >
                <!--MouseDown="panelHeader_MouseDown"-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="60" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Source="Resource/PixelBridge.ico"/>
                    <TextBlock 
                        Text="Pixel Bridge - Send Data" 
                        Margin="5,0,0,0" VerticalAlignment="Center" 
                        FontSize="18" FontWeight="Bold" Foreground="#0099CC" />
                </StackPanel>
                <Grid Grid.Column="1">
                    <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Height="40"
                    FontSize="28" Padding="0,-4,0,0" BorderBrush="White" FontWeight="Thin" Content="✕"
                    x:Name="btnExit" Margin="0" Click="btnExit_Click">
                    </Button>
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Visibility="Hidden" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Label Padding="0,0,0,0" Height="40" Content="S/N:" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Grid>
                <Grid Grid.Column="1" Margin="5,5,5,5">
                    <TextBox 
                        Padding="0,0,0,0" Height="40" FontSize="20" 
                        VerticalAlignment="Center" x:Name="tbxBarcode" KeyDown="tbxBarcode_KeyDown"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" >
                <TextBlock
               Text="" x:Name="tbxShowErr" HorizontalAlignment="Center"
               FontSize="16" Foreground="Red"
               VerticalAlignment="Center"/>
            </Grid>

            <Grid Grid.Row="3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!--<theme:PackIcon x:Name="iconConnectProgram" Kind="Information" VerticalAlignment="Center" Foreground="Gray" Width="25" Height="25" />-->
                        <TextBlock 
                            Margin="10,0,0,0" x:Name="iconConnectProgram" 
                            Width="25" FontSize="18" Text="❎" Foreground="Red"/>
                        <TextBlock 
                            Padding="0,4,0,0" Margin="5,0,0,0" Text="Connect to the sofware" />
                    </StackPanel>
                </Grid>
                <!--<Grid Grid.Column="1">
                <Button Height="30" Width="120" Margin="0,0,30,0" x:Name="btnSetup" Content="Setup"
                    VerticalAlignment="Center" HorizontalAlignment="Right" />
            </Grid>-->

            </Grid>
        </Grid>
    </Border>
</Window>
